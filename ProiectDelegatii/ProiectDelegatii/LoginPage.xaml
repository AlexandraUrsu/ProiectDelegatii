<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectDelegatii.LoginPage"
             BackgroundColor="#eeedea">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>

                <Frame BackgroundColor="#6f402b" Padding="20" >
                    <Image Source="capture.png"/>
                </Frame>

                <Entry x:Name="entry_username" Placeholder="Username" VerticalOptions="Center" Margin="60,50,60,0" HorizontalOptions="FillAndExpand" BackgroundColor="#e0dbd7"/>

                <Entry x:Name="entry_pass" Placeholder="Parolă" IsPassword="True"  VerticalOptions="Center" HorizontalOptions="FillAndExpand" Margin="60,10,60,0" BackgroundColor="#e0dbd7"/>

                <Button x:Name="SigninBtn" Text="Autentificare" TextColor="#eeedea"  Clicked="SignInEvent" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Margin="60,50,60,0" BackgroundColor="#6f402b" />

                <Button Text="Am uitat parola" TextColor="Gray" VerticalOptions="CenterAndExpand" Clicked="Button_Clicked" BackgroundColor="Transparent" FontSize="Small"/>


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>