<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectDelegatii.Documente"
             BackgroundColor="#E3D4C5"
             Title="{Binding Denumire}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Delete" Clicked="OnDeleteButtonClicked" Icon="delete.png"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content xmlns:local="clr-namespace:ProiectDelegatii">
        <StackLayout Margin="20">

            <Label Text="Denumire"/>
            <Entry
                    Text="{Binding Denumire}"
                    HeightRequest="50" 
                    IsEnabled="False">
            </Entry>

            <Label Text="Data Document"/>
            <DatePicker x:Name="DatePicker"
                    Grid.Column="1"
                    Format="d"
                    HeightRequest="50"
                    IsEnabled="False"
                    Date="{Binding DataDocument}"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Label Text="Suma"/>
                <Entry
                    Text="{Binding Suma}"
                    HeightRequest="50" 
                    IsEnabled="False"
                    Grid.Row="1">
                </Entry>
                
                <Label Text="Moneda"  Grid.Column="1"/>
                <Entry
                    Grid.Column="1"
                    Text="{Binding Moneda}"
                    HeightRequest="50" 
                    IsEnabled="False"
                    Grid.Row="1">
                </Entry>
            </Grid>

            <Label Text="Cod factură"/>
            <Entry
                    Text="{Binding Cod}"
                    HeightRequest="50" >
            </Entry>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>